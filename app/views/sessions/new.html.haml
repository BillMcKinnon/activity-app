%h1 Log in

= form_for(:session, url: login_path) do |f|
  = f.label :email
  = f.email_field :email

  = f.label :password
  = f.password_field :password

  = f.label :remember_me, "Remember?"
  = f.check_box :remember_me

  = f.submit "Log in"

= link_to "Forgot password?", new_password_reset_path
