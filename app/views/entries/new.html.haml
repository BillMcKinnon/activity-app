%h1 Add Entry
= form_for @entry do |f|
  = f.select(:activity_id, current_user.activities.map { |activity| [activity.name.capitalize, activity.id] }, include_blank: true)
  = text_field_tag :activity_name, nil, { placeholder: "Activity name", class: "activity-name-field" }
  = select_tag :activity_category, options_for_select([['Contributor', 'contributor'], ['Subtractor', 'subtractor']]), { prompt: "Select type", class: "activity-category-field" }
  = f.number_field :minutes, placeholder: "Minutes spent"

  = f.submit "Submit"
