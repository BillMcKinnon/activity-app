!!!
%html
  %head
    %title Activity App
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'https://cdn.jsdelivr.net/jquery/latest/jquery.min.js', defer: true
    = javascript_include_tag 'application', defer: true
    %body
      %header
        .container
          - flash.each do |message_type, message|
            = content_tag(:div, message, class: "alert alert-#{message_type}")

          - unless controller_name == "password_resets"
            %nav
              %ul
                - if logged_in?
                  %li= link_to  "Activity App", dashboard_path
                  %li= link_to "Log out", logout_path, method: :delete
                - else
                  = link_to "Activity App", root_path
                  = form_for(:session, url: login_path) do |f|
                    = f.label :email
                    = f.email_field :email

                    = f.label :password
                    = f.password_field :password

                    = f.label :remember_me, "Remember?"
                    = f.check_box :remember_me

                    = f.submit "Log in"

                  = link_to "Forgot password?", new_password_reset_path
      = yield

